{
  "name": "react-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.36",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "5.0.1",
    "sass": "^1.51.0",
    "typescript": "^4.6.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "cypress run-ct && jest",
    "test:utils": "jest src/utils/**/*.spec.ts",
    "test:components": "cypress run-ct",
    "eject": "react-scripts eject",
    "generate": "plop",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.17.12",
    "@cypress/react": "^5.12.5",
    "@cypress/webpack-dev-server": "^1.8.4",
    "babel-jest": "^28.1.0",
    "cypress": "^9.6.1",
    "husky": "^8.0.1",
    "plop": "^3.1.0",
    "react-test-renderer": "^18.1.0"
  },
  "jest": {
    "collectCoverage": true,
    "testMatch": [
      "**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  }
}
